<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/cover2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/Account"
            android:text="Title"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/EditTitle"
            android:hint="输入项目标题" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/Content"
            android:text="Content"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/EditContent"
            android:hint="输入项目内容" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/Telephone"
            android:text="Telephone"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/EditTelephone"
            android:hint="输入联系电话" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/CreateProject"
        android:text="创建项目"
        android:layout_margin="10dp"
        android:background="#66ffff"
        android:textColor="#888888" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/ChoosePicture"
        android:text="选择图片"
        android:layout_margin="10dp"
        android:background="#66ffff"
        android:textColor="#888888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="上传图片"
            android:id="@+id/UploadFile"
            android:layout_margin="10dp"
            android:background="#88ff88"
            android:textColor="#888888" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="上传项目信息"
            android:id="@+id/UploadInfo"
            android:layout_margin="10dp"
            android:background="#88ff88"
            android:textColor="#888888" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/model1"
        android:id="@+id/file" />
</LinearLayout>

